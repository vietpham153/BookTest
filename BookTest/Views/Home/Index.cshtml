@{
    ViewData["Title"] = "Trang chủ";
}

<div class="my-2">
    <form class="row gx-3 gy-2 align-items-center">
        <div class="col-sm-3">
            <label class="visually-hidden" for="specificSizeSelect">Thể loại</label>
            <select class="form-select" id="genreId">
                <option selected>Chọn thể loại</option>
                <option value="1">Hành động</option>
                <option value="2">Tình cảm</option>
                <option value="3">Học đường</option>
                <option value="3">Kinh dị </option>
            </select>
        </div>
        <div class="col-sm-3">
            <label class="visually-hidden" for="specificSizeInputGroupUsername">Tìm kiếm theo tiêu đề sách</label>
            <div class="input-group">
                <div class="input-group-text"></div>
                <input type="text" class="form-control" id="" placeholder="Tìm kiếm theo tiêu đề sách">
            </div>
        </div>

        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </div>
    </form>
</div>

<div class="w-100 mt-4 d-flex flex-wrap">
    @for (int i = 1; i <= 15; i++)
    {
        <div class="card mx-2 mt-4" style="width: 16rem;">
            <img src="https://picsum.photos/200/200" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Book title</h5>
                <p class="card-text">
                    Author: <br />
                    Price:
                </p>
                <a href="#" class="btn btn-primary"> <i class="bi bi-cart"></i> Add To Cart</a>
            </div>
        </div>
    }
</div>
